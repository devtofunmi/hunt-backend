generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String          @id @default(uuid())
  email     String
  username  String          @unique
  password  String
  image     String?
  bio       String?
  twitter   String?
  github    String?
  linkedin  String?
  bluesky   String?
  createdAt DateTime        @default(now())

  // Relations
  savedProducts SavedProduct[]
  upvotes       Upvote[]
}

model Product {
  id               String         @id @default(uuid())
  title            String
  logo             String
  shortDescription String
  fullDescription  String
  link             String
  userId           String
  githubUrl        String
  tags             String[]
  upvotes          Int            @default(0)
  createdAt        DateTime       @default(now())

  // Relations
  saves            SavedProduct[]
  upvoters         Upvote[]
}

model SavedProduct {
  id        String   @id @default(uuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  @@unique([userId, productId]) // One save per user-product
}

model Upvote {
  id        String   @id @default(uuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  @@unique([userId, productId]) // One upvote per user-product
}

